-- Gestión Estratégica
UPDATE dependencias SET gestion = 'estrategica' WHERE UPPER(nombre) IN (
  'ÁREA DE GESTIÓN DOCUMENTAL',
  'CENTRO DE GESTIÓN DE LA CALIDAD Y LA ACREDITACION INSTITUCIONAL',
  'OFICINA DE PLANEACIÓN Y DESARROLLO INSTITUCIONAL',
  'SECRETARIA GENERAL'
);

-- Gestión Administrativa
UPDATE dependencias SET gestion = 'administrativa' WHERE UPPER(nombre) IN (
  'ÁREA DE ADQUISICIONES E INVENTARIOS',
  'ÁREA DE SEGURIDAD, CONTROL Y MOVILIDAD',
  'CENTRO DE GESTIÓN DE LAS COMUNICACIONES',
  'DIVISIÓN DE GESTIÓN DEL TALENTO HUMANO',
  'DIVISIÓN DE GESTIÓN FINANCIERA',
  'DIVISIÓN DE TECNOLOGÍAS DE LA INFORMACIÓN Y LAS COMUNICACIONES - TICs',
  'GESTIÓN ADMINISTRATIVA',
  'GESTIÓN DE BIENES Y SERVICIOS',
  'GESTIÓN DEL MANTENIMIENTO DE BIENES MUEBLES, INMUEBLES Y EQUIPOS'
);

-- Gestión de Cultura y Bienestar
UPDATE dependencias SET gestion = 'cultura' WHERE UPPER(nombre) IN (
  'DIVISIÓN DE GESTIÓN DE LA CULTURA',
  'DIVISIÓN DE GESTIÓN DE LA RECREACIÓN Y EL DEPORTE',
  'DIVISIÓN DE GESTIÓN DE SALUD INTEGRAL Y DESARROLLO HUMANO',
  'PROGRAMA DE PERMANENCIA Y GRADUACIÓN',
  'VICERRECTORÍA DE CULTURA Y BIENESTAR'
);

-- Gestión de Investigación, Innovación e Interacción Social
UPDATE dependencias SET gestion = 'investigacion' WHERE UPPER(nombre) IN (
  'ÁREA DE DESARROLLO EDITORIAL',
  'ÁREA DE INTERACCIÓN SOCIAL',
  'DIVISIÓN DE INNOVACIÓN, EMPRENDIMIENTO Y ARTICULACIÓN CON EL ENTORNO - DAE',
  'GESTIÓN DE LA INVESTIGACIÓN'
);

-- Gestión de Control y Mejoramiento Continuo
UPDATE dependencias SET gestion = 'control' WHERE UPPER(nombre) IN (
  'OFICINA DE CONTROL INTERNO - OCI',
  'OFICINA DE CONTROL INTERNO DISCIPLINARIO- OCDI'
);

-- No Aplica
UPDATE dependencias SET gestion = 'otras' WHERE UPPER(nombre) IN (
  'OFICINA JURÍDICA',
  'UNIDAD DE SALUD'
);

